  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "mapCoverage": true,
    "testRegex": "/(test|src)/.*\\.(test|spec)\\.(ts|js)$"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^21.1.9",
